<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97a3c5"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="@string/tishi"
            android:textColor="#293f56"
            android:textSize="36sp" />
        //连接提示

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:textColor="#293f56"
                android:id="@+id/text_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="停车ing"
                android:textSize="18sp" />
            <TextView
                android:textColor="#293f56"
                android:id="@+id/text_radar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="前方无障碍"
                android:textSize="18sp" />



        </LinearLayout>
        //方向+速度



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/device_list"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:background="#5b9ad5"
                android:id="@+id/imageButtonqianjin"
                style="@android:style/Widget.Holo.ImageButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="100dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_keyboard_arrow_up_blue_100dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageButton
                    android:background="#5b9ad5"
                    android:id="@+id/imageButtonzuozhuan"
                    style="@android:style/Widget.Holo.ImageButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_keyboard_arrow_left_blue_100dp" />

                <ImageButton
                    android:background="#5b9ad5"
                    android:id="@+id/imageButtonhoutui"
                    style="@android:style/Widget.Holo.ImageButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_keyboard_arrow_down_blue_100dp" />


                <ImageButton
                    android:background="#5b9ad5"
                    android:id="@+id/imageButtonyouzhuan"
                    style="@android:style/Widget.Holo.ImageButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_blue_100dp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/buttonsousuo"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/shape"
            android:onClick="SearchDevice"
            android:text="@string/text1"
            android:textColor="#293f56"
            android:textSize="20sp"

            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonchakan"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:onClick="ShowBondDevice"
            android:text="@string/text2"
            android:textSize="20sp"
            android:textColor="#293f56"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape"/>

    </LinearLayout>


</LinearLayout>